<% if @event.errors.any? %>
  <% @event.errors.full_messages.each do |message| %>
   <p><%= message %></p>
  <% end %>
<% end %>

<%= form_for(@event) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :date %>
  <%= f.date_field :date%>

  <%= f.label :start_time %>
  <%= f.time_field :start_time %>

  <%= f.label :end_time %>
  <%= f.time_field :end_time %>

  <%= f.submit %>

<% end %>
